<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/register_user_email"
        android:hint="E-Mail Adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

    </EditText>

    <EditText
        android:id="@+id/register_user_password"
        android:hint="Passwort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

    </EditText>

    <EditText
        android:id="@+id/register_user_password_confirm"
        android:hint="Passwort wiederholen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

    </EditText>

    <Button
        android:padding="20dp"
        android:id="@+id/register_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profil erstellen"
        android:backgroundTint="?colorPrimary">
    </Button>



</LinearLayout>