<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <Button
        android:id="@+id/Add_Shopping_Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorPrimary"
        android:gravity="center"
        android:text="Artikel hinzufÃ¼gen"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/Savebutton_Shopping_List" />

    <Button
        android:id="@+id/Savebutton_Shopping_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="?colorPrimary"
        android:gravity="center"
        android:text="Liste speichern"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/Enter_Item_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Artikel aufschreiben ..."
        android:imeOptions="actionDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Enter_Item_Amount" />

    <EditText
        android:id="@+id/Enter_Item_Amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Anzahl ..."
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Add_Shopping_Item" />


    <ListView
        android:id="@+id/Shopping_List_List_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        ></ListView>



</android.support.constraint.ConstraintLayout>